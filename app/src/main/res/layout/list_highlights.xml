<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="115dp"
    tools:ignore="MissingDefaultResource">


  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      app:cardCornerRadius="10dp"
      android:layout_marginTop="20dp"
      app:cardElevation="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/Img_highlights"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:layout_gravity="center"
          android:layout_margin="10dp"
          android:layout_marginTop="2dp"
          android:layout_marginBottom="2dp"
          android:scaleType="fitXY"
          android:src="@drawable/dhoni"
          app:shapeAppearanceOverlay="@style/RoundedImageView" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">


          <TextView
              android:id="@+id/Txt_highlights_resource"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="3dp"
              android:layout_weight="1"
              android:text="Goball.net"
              android:textSize="12sp"
              android:textColor="#918D8D" />

          <TextView
              android:id="@+id/Txt_highlights_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="15dp"
              android:layout_weight="1"
              android:text="18 Dec"
              android:textColor="#918D8D"
              android:textAlignment="textEnd"
              android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/Txt_highlights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Argentina success In \nWinning the 2022 World Cup ..."
            android:textStyle="bold"
            android:textSize="14sp"  />

      </LinearLayout>

    </LinearLayout>


  </androidx.cardview.widget.CardView>







</LinearLayout>